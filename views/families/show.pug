extends ../layout

block content
	h1.
		Family #{family.id}
	p Name: #{family.name}
	p description: #{family.description}
	p owner: #{family.owner.alias}
	p 
		a(href='/families/'+family.id+'/edit') Edit
		form(action='/families/'+family._id,method='POST',enctype='application/x-www-form-urlencoded')
			input(type='hidden',value='DELETE',name='_method')
			button(type='submit').
				Delete
		if(!family.completed)
			form(action='/families/'+family._id+'/resolve',method='POST',enctype='application/x-www-form-urlencoded')
				input(type='hidden',value='PUT',name='_method')
				button(type='submit').
					Resolve
		else
			form(action='/families/'+family._id+'/reopen',method='POST',enctype='application/x-www-form-urlencoded')
				input(type='hidden',value='PUT',name='_method')
				button(type='submit').
					Incomplete