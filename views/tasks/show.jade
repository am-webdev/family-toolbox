extends ../layout

block content
	h1.
		Task #{task.id}
	p Name: #{task.name}
	p description: #{task.description}
	p owner: #{task.owner.username}
	p assignee: #{task.assignee}
	p duedate: #{task.duedate}
	p completed: #{task.completed}
	p 
		a(href='/tasks/#{task.id}/edit') Edit
		form(action='/tasks/#{task._id}',method='POST',enctype='application/x-www-form-urlencoded')
			input(type='hidden',value='DELETE',name='_method')
			button(type='submit').
				Delete